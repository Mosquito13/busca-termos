{
  "name": "busca-termos",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "elec": "electron .",
    "start": "concurrently -k -n electron,react -c \"magenta,cyan\" \"electron .\" \"react-scripts start\"",
    "build:react": "react-scripts build",
    "build:electron-windows": "electron-builder --win --x64",
    "build": "npm run clean && npm run build:react && npm run build:electron-windows",
    "test": "react-scripts test",
    "clean:dist": "rm -r -f ./dist/**",
    "clean:build": "rm -r -f ./build/**",
    "clean": "concurrently \"npm run clean:dist\" \"npm run clean:build"
  },
  "build": {
    "extends": null,
    "productName": "BuscaTermos",
    "appId": "com.mosquito.buscaTermos",
    "files": [
      "build/**",
      "electron/**"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.4.0",
    "electron": "^16.0.4",
    "electron-builder": "^22.14.5"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "electron-is-dev": "^2.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "web-vitals": "^2.1.2"
  }
}
